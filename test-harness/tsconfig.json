{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist-test",
    "rootDir": ".",
    "lib": ["ES2022"]
  },
  "include": [
    "test-clients/**/*.ts",
    "test-scenarios/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist-test"
  ]
}