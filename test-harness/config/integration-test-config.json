{
  "auth": {
    "trustedIDPs": [
      {
        "name": "test-idp",
        "issuer": "https://auth.example.com",
        "discoveryUrl": "https://auth.example.com/.well-known/openid-configuration",
        "jwksUri": "https://auth.example.com/.well-known/jwks.json",
        "clientId": "mcp-oauth",
        "audience": "mcp-oauth",
        "scope": "openid profile",
        "algorithms": ["RS256"],
        "claimMappings": {
          "legacyUsername": "legacy_name",
          "roles": "roles",
          "scopes": "scope",
          "userId": "sub",
          "username": "preferred_username"
        },
        "roleMappings": {
          "admin": ["admin", "administrator"],
          "user": ["user", "authenticated"],
          "guest": ["guest", "anonymous"],
          "defaultRole": "guest",
          "rejectUnmappedRoles": false
        },
        "security": {
          "clockTolerance": 60,
          "maxTokenAge": 3600,
          "requireNbf": false
        }
      }
    ],
    "rateLimiting": {
      "enabled": true,
      "maxRequests": 1000,
      "windowMs": 900000
    },
    "audit": {
      "enabled": true,
      "logAllAttempts": true,
      "retentionDays": 90
    }
  },
  "delegation": {
    "modules": {}
  },
  "mcp": {
    "serverName": "MCP OAuth Integration Test Server",
    "version": "3.0.0",
    "transport": "stdio",
    "enabledTools": {
      "health-check": true,
      "user-info": true,
      "audit-log": true
    },
    "oauth": {
      "protectedResource": true,
      "scopes": ["openid"]
    }
  }
}
