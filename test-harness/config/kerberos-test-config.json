{
  "auth": {
    "trustedIDPs": [
      {
        "issuer": "http://192.168.1.25:8080/realms/mcp-test",
        "discoveryUrl": "http://192.168.1.25:8080/realms/mcp-test/.well-known/openid-configuration",
        "jwksUri": "http://192.168.1.25:8080/realms/mcp-test/protocol/openid-connect/certs",
        "audience": "mcp-server-api",
        "algorithms": ["RS256", "ES256"],
        "claimMappings": {
          "legacyUsername": "legacy_username",
          "roles": "realm_roles",
          "scopes": "scope"
        },
        "security": {
          "clockTolerance": 60,
          "maxTokenAge": 3600,
          "requireNbf": true
        },
        "tokenExchange": {
          "tokenEndpoint": "http://192.168.1.25:8080/realms/mcp-test/protocol/openid-connect/token",
          "clientId": "mcp-server",
          "clientSecret": "your-client-secret-here",
          "audience": "urn:kerberos:delegation"
        }
      }
    ]
  },
  "roleMappings": {
    "admin": ["admin", "administrator"],
    "user": ["user", "member"],
    "guest": ["guest"],
    "defaultRole": "guest",
    "rejectUnmappedRoles": false
  },
  "rateLimiting": {
    "maxRequests": 100,
    "windowMs": 900000
  },
  "audit": {
    "logAllAttempts": true,
    "retentionDays": 90
  },
  "kerberos": {
    "enabled": true,
    "domainController": "192.168.1.25",
    "servicePrincipalName": "HTTP/mcp-server",
    "realm": "COMPANY.COM",
    "kdc": "192.168.1.25:88",
    "enableS4U2Self": true,
    "enableS4U2Proxy": true,
    "allowedDelegationTargets": [
      "MSSQLSvc/sql01.company.com:1433",
      "HTTP/api.company.com",
      "HTTP/localhost"
    ],
    "serviceAccount": {
      "username": "svc-mcp-server",
      "password": "YourSecurePassword123!"
    },
    "ticketCache": {
      "enabled": true,
      "ttlSeconds": 3600,
      "renewThresholdSeconds": 300,
      "maxEntriesPerSession": 10,
      "maxTotalEntries": 1000
    }
  }
}
