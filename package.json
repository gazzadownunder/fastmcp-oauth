{
  "name": "mcp-oauth-framework",
  "version": "2.0.0",
  "description": "Modular OAuth 2.1 authentication and delegation framework for FastMCP with pluggable delegation modules",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "mcp-oauth-scaffold": "./bin/scaffold-module.js",
    "mcp-oauth-validate": "./bin/validate-config.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./core": {
      "types": "./dist/src/core/index.d.ts",
      "import": "./dist/src/core/index.js"
    },
    "./delegation": {
      "types": "./dist/src/delegation/index.d.ts",
      "import": "./dist/src/delegation/index.js"
    },
    "./mcp": {
      "types": "./dist/src/mcp/index.d.ts",
      "import": "./dist/src/mcp/index.js"
    },
    "./config": {
      "types": "./dist/src/config/index.d.ts",
      "import": "./dist/src/config/index.js"
    },
    "./testing": {
      "types": "./dist/src/testing/index.d.ts",
      "import": "./dist/src/testing/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:core && npm run build:packages",
    "build:core": "tsup",
    "build:packages": "npm run build --workspaces --if-present",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:unit": "vitest tests/unit",
    "test:phase3": "vitest test-harness/phase3-integration.test.ts --no-coverage",
    "test:phase3:performance": "vitest test-harness/phase3-performance.test.ts --no-coverage",
    "test:sql": "vitest test-harness/sql-delegation.test.ts --no-coverage",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit && npm run typecheck --workspaces --if-present",
    "start": "node dist/start-server.js",
    "clean": "rimraf dist && npm run clean --workspaces --if-present",
    "test:mcp-client": "http-server ./test-harness/mcp-client -p 8081",
    "test:oauth-ui": "http-server ./test-harness/oauth-test -p 8082 --cors"
  },
  "keywords": [
    "fastmcp",
    "oauth",
    "jwt",
    "kerberos",
    "sql",
    "delegation",
    "authentication",
    "on-behalf-of"
  ],
  "author": "FastMCP OAuth OBO Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fastmcp": "^3.20.2",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^3.0.5",
    "jose": "^6.1.0",
    "mcp-proxy": "^5.9.0",
    "undici": "^7.13.0",
    "zod": "^3.25.76"
  },
  "optionalDependencies": {
    "@mcp-oauth/kerberos-delegation": "^1.0.0",
    "@mcp-oauth/sql-delegation": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "http-server": "^14.1.1",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
